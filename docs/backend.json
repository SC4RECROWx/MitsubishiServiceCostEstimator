{
  "entities": {
    "Vehicle": {
      "title": "Vehicle",
      "description": "Represents a vehicle model and its available variations.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the vehicle model."
        },
        "name": {
          "type": "string",
          "description": "The display name of the vehicle model."
        },
        "years": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "year": { "type": "number" },
              "trims": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["year", "trims"]
          }
        }
      },
      "required": ["id", "name", "years"]
    },
    "Part": {
      "title": "Part",
      "description": "Represents a single spare part.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "partNumber": { "type": "string" },
        "price": { "type": "number" }
      },
      "required": ["id", "name", "partNumber", "price"]
    },
    "ServiceJob": {
      "title": "Service Job",
      "description": "Represents a single labor job with a cost.",
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "cost": { "type": "number" }
      },
      "required": ["description", "cost"]
    },
    "PeriodicService": {
      "title": "Periodic Service",
      "description": "Represents a periodic maintenance package.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "vehicleModelId": { "type": "string" },
        "name": { "type": "string" },
        "mileage": { "type": "number" },
        "jobs": {
          "type": "array",
          "items": { "$ref": "#/entities/ServiceJob" }
        },
        "parts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "partId": { "type": "string" },
              "quantity": { "type": "number" }
            },
            "required": ["partId", "quantity"]
          }
        }
      },
      "required": ["id", "vehicleModelId", "name", "jobs", "parts"]
    },
    "AdditionalService": {
      "title": "Additional Service",
      "description": "Represents an optional, non-periodic service.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "applicableModels": { "type": "array", "items": { "type": "string" } },
        "job": { "$ref": "#/entities/ServiceJob" },
        "parts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "partId": { "type": "string" },
              "quantity": { "type": "number" }
            },
            "required": ["partId", "quantity"]
          }
        }
      },
      "required": ["id", "name", "applicableModels", "job", "parts"]
    },
    "Accessory": {
      "title": "Accessory",
      "description": "Represents an accessory that can be installed.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "price": { "type": "number" },
        "applicableModels": { "type": "array", "items": { "type": "string" } },
        "job": { "$ref": "#/entities/ServiceJob" }
      },
      "required": ["id", "name", "price", "applicableModels", "job"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/vehicles/{vehicleId}": {
      "schema": { "$ref": "#/entities/Vehicle" },
      "description": "Stores all vehicle models and their variations."
    },
    "/parts/{partId}": {
      "schema": { "$ref": "#/entities/Part" },
      "description": "Stores all individual spare parts."
    },
    "/periodicServices/{serviceId}": {
      "schema": { "$ref": "#/entities/PeriodicService" },
      "description": "Stores all periodic maintenance packages."
    },
    "/additionalServices/{serviceId}": {
      "schema": { "$ref": "#/entities/AdditionalService" },
      "description": "Stores optional, non-periodic services."
    },
    "/tyreServices/{serviceId}": {
      "schema": { "$ref": "#/entities/AdditionalService" },
      "description": "Stores tyre-related services."
    },
    "/acAndEngineServices/{serviceId}": {
      "schema": { "$ref": "#/entities/AdditionalService" },
      "description": "Stores AC and Engine related services."
    },
    "/accessories/{accessoryId}": {
      "schema": { "$ref": "#/entities/Accessory" },
      "description": "Stores all available accessories."
    }
  }
}
